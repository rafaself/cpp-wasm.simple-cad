{
  "name": "protoncanvas",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.15.9",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md,html}\"",
    "test": "node ./scripts/test-preflight.mjs && vitest run",
    "build:wasm": "docker compose -f ../docker-compose.yml run --rm wasm-builder",
    "bench:world-snapshot": "node ./verification/benchmark_world_snapshot.mjs 100000",
    "bench:vector-index": "node ./verification/benchmark_vector_index.mjs 65536",
    "bench:svg-to-ir": "node ./verification/benchmark_svg_to_vector_document.mjs 10000",
    "governance:budgets": "node ../scripts/check_file_size_budget.js",
    "governance:boundaries": "node ../scripts/check_boundaries.js",
    "governance:manifest": "node ../scripts/check_engine_api_manifest.js",
    "governance:docs": "node ../scripts/check_docs_references.js",
    "governance:hex": "node ./scripts/check_hex_colors.mjs",
    "governance:check": "pnpm run governance:budgets && pnpm run governance:boundaries && pnpm run governance:manifest && pnpm run governance:docs && pnpm run governance:hex && pnpm run lint"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.6",
    "@fontsource/roboto": "^5.2.6",
    "dxf-parser": "^1.1.2",
    "lucide-react": "^0.556.0",
    "pdfjs-dist": "^4.10.38",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^22.14.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-boundaries": "^4.2.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.3",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "vite": "^6.2.0",
    "vitest": "^4.0.15",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0"
  }
}
